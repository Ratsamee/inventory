<% if @customer.errors.any? %>
    <div class="form-row">
        <ul class="error_message">
            <% @customer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_for @customer, :html => { :multipart => true } do |f| %>
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :first_name %></div>
        <%= f.text_field :first_name, maxlength: 25, :required => true, :class => "form-group col-md-6" %>
        <div class="form-group col-md-4"></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :last_name %></div>
        <%= f.text_field :last_name, maxlength: 25, :required => true, :class => "form-group col-md-6" %>
        <div class="form-group col-md-4"></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :address %></div>
        <%= f.text_area(:address, cols:100, rows:5, maxlength: 1000, :required => true, class:"form-group col-md-6") %>
        <div class="form-group col-md-4"></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :phone_number %></div>
        <%= f.number_field :phone_number, maxlength: 15, :class => "form-group col-md-6" %>
        <div class="form-group col-md-4"></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :email %></div>
        <%= f.email_field :email, maxlength: 25, :class => "form-group col-md-6" %>
        <div class="form-group col-md-4"></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2"></div>
        <div class="form-group col-md-9 no-padding-left">
            <%= f.submit %>
        </div>
    </div>
<% end %>