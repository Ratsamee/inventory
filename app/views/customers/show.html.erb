<h1>Customer: <%= "#{@customer.first_name} #{@customer.last_name}" %></h1>
<div class="add-margin-top">
    <div class="form-row">
        <div class="form-group col-md-2">First Name:</div>
        <div class="form-group col-md-10"><%= @customer.first_name %></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">Last Name:</div>
        <div class="form-group col-md-10"><%= @customer.last_name %></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">Address:</div>
        <div class="form-group col-md-10"><%= @customer.address %></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">Phone:</div>
        <div class="form-group col-md-10"><%= @customer.phone_number %></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">Email:</div>
        <div class="form-group col-md-10"><%= @customer.email %></div>
    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
        <%= link_to "Edit Customer", edit_customer_path(@customer) %>
        <%= link_to "Delete Customer", @customer, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
        </div>
    </div>
</div>
