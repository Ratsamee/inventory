<h1>User: <%= @user.first_name %></h1>
<div class="form-row">
    <div class="form-group col-md-2">First Name:</div>
    <div class="form-group col-md-10"><%= @user.first_name %></div>
</div>
<div class="form-row">
    <div class="form-group col-md-2">Last Name:</div>
    <div class="form-group col-md-10"><%= @user.last_name %></div>
</div>
<div class="form-row">
    <div class="form-group col-md-2">Email:</div>
    <div class="form-group col-md-10"><%= @user.email %></div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
    <%= link_to "Edit User", edit_user_path(@user) %>
    <%= link_to "Delete User", @user, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
    </div>
</div>