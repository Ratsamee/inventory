<% if @user.errors.any? %>
    <div class="form-row">
        <ul class="error_message">
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_for @user do |f| %>
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :first_name %></div>
        <%= f.text_field :first_name, :class => "form-group col-md-6" %>
        <div class="form-group col-md-4"></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :last_name %></div>
        <%= f.text_field :last_name, :class => "form-group col-md-6" %>
        <div class="form-group col-md-4"></div>
    </div>
    
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :email %></div>
        <%= f.email_field :email, :class => "form-group col-md-6" %>
        <div class="form-group col-md-4"></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2"><%= f.label :password %></div>
        <%= f.password_field :password, :class => "form-group col-md-6" %>
        <div class="form-group col-md-4"></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2"></div>
        <div class="form-group col-md-9 no-padding-left">
            <%= f.submit %>
        </div>
    </div>
<% end %>