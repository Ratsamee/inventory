<h1>Category: <%= @category.name %></h1>
<div class="form-row">
    <div class="form-group col-md-2">Code:</div>
    <div class="form-group col-md-10"><%= @category.code %></div>
</div>
<div class="form-row">
    <div class="form-group col-md-2">Name:</div>
    <div class="form-group col-md-10"><%= @category.name %></div>
</div>
<div class="form-row">
    <div class="form-group col-md-2">Description:</div>
    <div class="form-group col-md-10"><%= @category.description %></div>
</div>
<% if @category.category.present? %>
    <div class="form-row">
        <div class="form-group col-md-2">Parent Category: </div>
        <div class="form-group col-md-10"><%= @category.category.name %></div>
    </div>
<% end %>

<div class="form-row">
    <div class="form-group col-md-6">
    <%= link_to "Edit Category", edit_category_path(@category) %>
    <%= link_to "Delete Categroy", @category, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
    </div>
</div>