<h1>Inventory: <%= @inventory.code %></h1>
<div class="form-row">
    <div class="form-group col-md-8">
        <div class="form-row">
            <div class="form-group col-md-2">Code:</div>
            <div class="form-group col-md-10"><%= @inventory.code %></div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">Date:</div>
            <div class="form-group col-md-10"><%= @inventory.received_date %></div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">Product:</div>
            <div class="form-group col-md-10"><%= @inventory.product.name %></div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">Cost:</div>
            <div class="form-group col-md-10"><%= number_to_currency @inventory.cost %></div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">Price:</div>
            <div class="form-group col-md-10"><%= number_to_currency @inventory.rpp %></div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">Quantity:</div>
            <div class="form-group col-md-10"><%= @inventory.quantity %></div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">Qty On Hand:</div>
            <div class="form-group col-md-10"><%= @inventory.qty_on_hand %></div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">Bin Location:</div>
            <div class="form-group col-md-10"><%= @inventory.bin_location %></div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <%= link_to "Edit Inventory", edit_inventory_path(@inventory) %>
            </div>
        </div>
    </div>
    <div class="form-group col-md-4">
        <%= image_tag @inventory.product.image, :class => 'feature' %>
    </div>
</div>
